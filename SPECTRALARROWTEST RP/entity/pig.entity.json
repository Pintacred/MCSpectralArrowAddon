{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "minecraft:pig",
      "min_engine_version": "1.8.0",
      "materials": {
        "default": "entity_alphatest",

        "pig_glow": "entity_emissive",
        "pig_glow2": "entity_glow_status"
      },
      "textures": {
        "default": "textures/entity/pig/pig",
        "saddled": "textures/entity/pig/pig_saddle",

        "glowing_texture": "textures/entity/mob_glowing_effect/glow_highlight"
      },
      "geometry": {
        "default": "geometry.pig.v1.8",

        "pig_glow": "geometry.pig_glow.v1.8"
      },
      "animations": {
        "setup": "animation.pig.setup",
        "walk": "animation.quadruped.walk",
        "look_at_target": "animation.common.look_at_target",
        "baby_transform": "animation.pig.baby_transform"
      },
      "scripts": {
        "animate": [
          "setup",
          {
            "walk": "query.modified_move_speed"
          },
          "look_at_target",
          {
            "baby_transform": "query.is_baby"
          }
        ]
      },
      "render_controllers": [
        "controller.render.pig",

        "controller.render.pig_glow",
        "controller.render.pig_glow2"
      ],
      "spawn_egg": {
        "texture": "spawn_egg",
        "texture_index": 2
      }
    }
  }
}