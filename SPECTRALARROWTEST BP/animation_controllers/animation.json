{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.bow": {
            "states": {
                "default": {
                    "on_entry": [
                        "/tag @s remove has_arrow_spectral",
                        "/tag @s add none_arrow_spectral",
                        "/tellraw @s {\"rawtext\":[{\"text\":\"§lSPECTRAL ARROW TURNED §cOFF§r\"}]}"
                    ],
                    "transitions": [
                        {
                            "spectral": "query.variant == 0 && query.is_item_name_any('slot.hotbar', 8, 'pintacred:spectral_arrow')"
                        }
                    ]
                },
                "spectral": {
                    "on_entry": [
                        "/tag @s add has_arrow_spectral",
                        "/tag @s remove none_arrow_spectral",
                        "/tellraw @s {\"rawtext\":[{\"text\":\"§lSPECTRAL ARROW TURNED §aON§r\"}]}"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_item_name_any('slot.hotbar', 8, 'pintacred:spectral_arrow')"
                        }
                    ]
                }
            }
        },
        "controller.animation.crossbow": {
            "states": {
                "default": {
                    "on_entry": [
                        "/tag @s remove has_arrow_spectral",
                        "/tag @s add none_arrow_spectral",
                        "/tellraw @s {\"rawtext\":[{\"text\":\"§lSPECTRAL ARROW TURNED §cOFF§r\"}]}"
                    ],
                    "transitions": [
                        {
                            "spectral": "query.variant == 0 && query.is_item_name_any('slot.hotbar', 8, 'pintacred:spectral_arrow')"
                        }
                    ]
                },
                "spectral": {
                    "on_entry": [
                        "/tag @s add has_arrow_spectral",
                        "/tag @s remove none_arrow_spectral",
                        "/tellraw @s {\"rawtext\":[{\"text\":\"§lSPECTRAL ARROW TURNED §aON§r\"}]}"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_item_name_any('slot.hotbar', 8, 'pintacred:spectral_arrow')"
                        }
                    ]
                }
            }
        },
        "controller.animation.info": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "info": "query.get_equipped_item_name == 'bow' && query.is_sneaking"
                        },
                        {
                            "info": "query.get_equipped_item_name == 'crossbow' && query.is_sneaking"
                        }
                    ]
                },
                "info": {
                    "on_entry": [
                        "/tellraw @s {\"rawtext\":[{\"text\":\"§l§2USAGE: \n§r- Equip your bow/crossbow\n- Go sneak\n- Press attack to change firing mode\n\nCreated by Coptaine\"}]}"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name != 'bow' && query.get_equipped_item_name != 'crossbow'"
                        },
                        {
                            "default": "!query.is_sneaking"
                        }
                    ]
                }
            }
        }
    }
}